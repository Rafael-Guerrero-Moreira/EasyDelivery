<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.easydelivery">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/logo"
        android:label="@string/app_name"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@mipmap/logo"
        android:supportsRtl="true"
        android:theme="@style/Theme.EasyDeliver">
        <activity android:name=".module.CompanyInfo"></activity>
        <activity android:name=".views.activities.startup.WelcomeScreenActivity" />
        <activity android:name=".module.CreateProduct" />
        <activity android:name=".views.activities.auth.RegisterDeliveryScreenActivity" />
        <activity android:name=".views.activities.auth.RegisterBusinessScreenActivity" />
        <activity android:name=".views.activities.auth.UserTypeScreenActivity" />
        <activity android:name=".views.activities.auth.ChangePasswordScreenActivity" />
        <activity android:name=".menu.Search" />
        <activity android:name=".menu.Category" />
        <activity android:name=".menu.StoreForBusinnes" />
        <activity android:name=".menu.SettingUser" />
        <activity android:name=".views.activities.auth.LoginScreenActivity" />
        <activity android:name=".views.activities.auth.RegisterClientScreenActivity" />
        <activity android:name=".MainActivity" />
        <activity android:name=".views.activities.startup.SplashScreenActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>