<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_margin="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/layout_bg_rounded_2"
        android:layout_marginTop="15dp"
        android:layout_marginHorizontal="15dp"
        android:padding="0dp">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:layout_weight="0.3"
            app:cardCornerRadius="10dp">

            <ImageView
                android:id="@+id/lmclImageViewProductInCar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/logo_white"
                />

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="-10dp"
            android:layout_weight="0.7"
            android:background="@drawable/layout_bg_rounded_3"
            android:paddingTop="15dp"
            android:paddingBottom="5dp">

            <TextView
                android:id="@+id/lplTxtProductNameInCar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="?attr/alText"
                android:gravity="start"
                android:textSize="18sp"
                android:text="Nombre del producto"/>

            <TextView
                android:id="@+id/lmcTxtProductCoste"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="?attr/alText"
                android:gravity="start"
                android:textSize="16sp"
                android:text="Costo"/>

            <TextView
                android:id="@+id/lmcTxtBusiness"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="?attr/alText"
                android:gravity="start"
                android:textSize="14sp"
                android:text="Vendedor"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>