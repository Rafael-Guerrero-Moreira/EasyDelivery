<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_margin="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/layout_bg_rounded_2"
        android:layout_marginTop="15dp"
        android:layout_marginHorizontal="15dp"
        android:padding="0dp">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="-10dp"
            android:layout_weight="0.7"
            android:background="@drawable/layout_bg_rounded_3"
            android:paddingTop="15dp"
            android:paddingBottom="5dp">

            <TextView
                android:id="@+id/lorTxtClientorder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="?attr/alText"
                android:gravity="center"
                android:textSize="18sp"
                android:text="Nombre del Cliente"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/lorTvDeliver"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:text="Repartidor"
                    android:textAlignment="textStart"
                    android:textColor="?attr/alText"
                    android:textSize="16sp"
                    tools:ignore="RtlCompat" />

                <TextView
                    android:id="@+id/lorTxtDeliver"
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:text="Deliver"
                    android:textAlignment="textStart"
                    android:textColor="?attr/alText"
                    android:textSize="16sp"
                    tools:ignore="RtlCompat" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/lorTvDate"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:text="Fecha"
                    android:textAlignment="textStart"
                    android:textColor="?attr/alText"
                    android:textSize="16sp"
                    tools:ignore="RtlCompat" />

                <TextView
                    android:id="@+id/lorTxtDate"
                    android:layout_width="172dp"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:text="Fecha"
                    android:textAlignment="textStart"
                    android:textColor="?attr/alText"
                    android:textSize="16sp"
                    tools:ignore="RtlCompat" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/lorTvStatus"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:text="Estadu"
                    android:textAlignment="textStart"
                    android:textColor="?attr/alText"
                    android:textSize="16sp"
                    tools:ignore="RtlCompat" />

                <TextView
                    android:id="@+id/lorTxtStatus"
                    android:layout_width="172dp"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:text="Estado"
                    android:textAlignment="textStart"
                    android:textColor="?attr/alText"
                    android:textSize="16sp"
                    tools:ignore="RtlCompat" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    </LinearLayout>

