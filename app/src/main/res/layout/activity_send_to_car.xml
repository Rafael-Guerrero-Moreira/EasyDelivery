<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".module.SendToCar">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="154dp"
            android:layout_height="170dp"
            app:srcCompat="@drawable/ic_templatephoto"
            tools:layout_editor_absoluteX="21dp"
            tools:layout_editor_absoluteY="21dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/idEditablePrice"
                android:layout_width="197dp"
                android:layout_height="26dp"
                android:text="Price"
                tools:layout_editor_absoluteX="174dp"
                tools:layout_editor_absoluteY="159dp" />

            <TextView
                android:id="@+id/textViewPrice"
                android:layout_width="197dp"
                android:layout_height="25dp"
                android:text="Precio"
                tools:layout_editor_absoluteX="174dp"
                tools:layout_editor_absoluteY="134dp" />

            <TextView
                android:id="@+id/idEditableDescription"
                android:layout_width="197dp"
                android:layout_height="26dp"
                android:text="Desciption"
                tools:layout_editor_absoluteX="174dp"
                tools:layout_editor_absoluteY="106dp" />

            <TextView
                android:id="@+id/textViewDescription"
                android:layout_width="197dp"
                android:layout_height="25dp"
                android:text="Descripcion"
                tools:layout_editor_absoluteX="174dp"
                tools:layout_editor_absoluteY="81dp" />



            <TextView
                android:id="@+id/textViewnameforcar"
                android:layout_width="197dp"
                android:layout_height="25dp"
                android:text="Nombre"
                tools:layout_editor_absoluteX="174dp"
                tools:layout_editor_absoluteY="28dp" />

            <TextView
                android:id="@+id/idEditableName"
                android:layout_width="197dp"
                android:layout_height="26dp"
                android:text="Name"
                tools:layout_editor_absoluteX="174dp"
                tools:layout_editor_absoluteY="53dp" />


        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/btnAddToCar"
        android:layout_width="211dp"
        android:layout_height="49dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="Agregar al carrito"
        tools:layout_editor_absoluteY="551dp" />


</RelativeLayout>