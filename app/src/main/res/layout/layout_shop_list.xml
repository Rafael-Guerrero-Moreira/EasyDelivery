<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_margin="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/layout_bg_rounded_2"
        android:layout_marginTop="15dp"
        android:layout_marginHorizontal="15dp"
        android:padding="0dp">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="-10dp"
            android:layout_weight="0.7"
            android:background="@drawable/layout_bg_rounded_3"
            android:paddingTop="15dp"
            android:paddingBottom="5dp">

            <TextView
                android:id="@+id/lshTxtProductNameInShop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="?attr/alText"
                android:gravity="start"
                android:textSize="18sp"
                android:text="Nombre del producto"/>

            <TextView
                android:id="@+id/lshTxtBusiness"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="?attr/alText"
                android:gravity="start"
                android:textSize="14sp"
                android:text="Vendedor"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                 android:orientation="horizontal">

                 <TextView
                     android:id="@+id/lshTvProductCoste"
                     android:layout_width="160dp"
                     android:layout_height="wrap_content"
                     android:gravity="start"
                     android:text="Costo"
                     android:textAlignment="textStart"
                     android:textColor="?attr/alText"
                     android:textSize="16sp"
                     tools:ignore="RtlCompat" />

                <TextView
                    android:id="@+id/lshTxtProductCoste"
                    android:layout_width="77dp"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:text="Costo"
                    android:textAlignment="textEnd"
                    android:textColor="?attr/alText"
                    android:textSize="16sp"
                    tools:ignore="RtlCompat" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/lshTvProductQuantity"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:text="Cantidad"
                    android:textAlignment="textStart"
                    android:textColor="?attr/alText"
                    android:textSize="16sp"
                    tools:ignore="RtlCompat" />

                <TextView
                    android:id="@+id/lshTxtProductQuantity"
                    android:layout_width="79dp"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:text="Cantidad"
                    android:textAlignment="textEnd"
                    android:textColor="?attr/alText"
                    android:textSize="16sp"
                    tools:ignore="RtlCompat" />

            </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/lshtvProductSubTotal"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:text="SunTotal"
                android:textAlignment="textStart"
                android:textColor="?attr/alText"
                android:textSize="16sp"
                tools:ignore="RtlCompat" />

            <TextView
                android:id="@+id/lshTxtProductSubTotal"
                android:layout_width="77dp"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:text="SunTotal"
                android:textAlignment="textEnd"
                android:textColor="?attr/alText"
                android:textSize="16sp"
                tools:ignore="RtlCompat" />

        </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>