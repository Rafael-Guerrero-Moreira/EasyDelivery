<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_margin="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/layout_bg_rounded_2"
        android:layout_marginTop="15dp"
        android:layout_marginHorizontal="15dp"
        android:padding="0dp">

        <ImageView
            android:id="@+id/lplImageViewProduct"
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:layout_weight="0.3"
            android:scaleType="centerCrop"
            android:src="@drawable/logo_white"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="0.7"
            android:background="@drawable/layout_bg_rounded_3"
            android:paddingVertical="5dp">

            <TextView
                android:id="@+id/lplTxtProductName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="?attr/alText"
                android:gravity="start"
                android:textSize="18sp"
                android:text="Nombre del producto"/>

            <TextView
                android:id="@+id/lplTxtProductPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="?attr/alText"
                android:gravity="start"
                android:textSize="16sp"
                android:text="Precio"/>

            <TextView
                android:id="@+id/lplTxtProductDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="?attr/alText"
                android:gravity="start"
                android:textSize="14sp"
                android:text="DescripciÃ³n"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>