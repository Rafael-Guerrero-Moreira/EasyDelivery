<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.activities.startup.SplashScreenActivity"
    android:background="?attr/asBackground">

    <ImageView
        android:id="@+id/asIcon"
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="180dp"
        android:src="@drawable/logo_white" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/asIcon"
        android:layout_centerHorizontal="true"
        android:text="VersiÃ³n 1.0.0"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:textStyle="bold" />

    <ProgressBar
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/asIcon"
        android:indeterminateTint="?attr/asSpinner"
        android:layout_marginTop="125dp"
        android:layout_centerHorizontal="true">
    </ProgressBar>

</RelativeLayout>